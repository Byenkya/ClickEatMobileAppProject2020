<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/cardview_light_background" android:tag="layout/order_cart_item_layout_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/order_cart_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Name"
            android:textColor="@color/design_default_color_on_secondary"
            app:layout_constraintEnd_toStartOf="@+id/order_cart_item_quantity"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/order_cart_item_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Quantity"
            android:textColor="@color/design_default_color_on_secondary"
            app:layout_constraintEnd_toStartOf="@+id/order_cart_item_price"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/order_cart_item"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/order_cart_item_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Price "
            android:textColor="@color/design_default_color_on_secondary"
            app:layout_constraintEnd_toStartOf="@+id/order_cart_item_total"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/order_cart_item_quantity"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/order_cart_item_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textColor="@color/design_default_color_on_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/order_cart_item_price"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/served_with"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="served with"
            android:textColor="@color/secondaryTextColor"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/order_cart_item_quantity" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         