<?xml version="1.0" encoding="utf-8"?>

                                                        

    
                                                                                      
           

    <LinearLayout
        android:id="@+id/image_slider_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/product_image_layout_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            app:cardCornerRadius="10dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_slider_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="binding_1"                                     
                android:scaleType="fitXY"
                app:srcCompat="@color/cardview_light_background" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
         