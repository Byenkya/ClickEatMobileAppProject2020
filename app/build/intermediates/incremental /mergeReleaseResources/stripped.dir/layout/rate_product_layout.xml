<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:padding="8dp" android:tag="layout/rate_product_layout_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:id="@+id/rate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_mood_bad_24" />

            <TextView
                android:id="@+id/badLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bad"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_sentiment_dissatisfied_24" />

            <TextView
                android:id="@+id/fairLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fair"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rate3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                app:srcCompat="@drawable/ic_baseline_sentiment_satisfied_24" />

            <TextView
                android:id="@+id/goodLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/good"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rate4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/vGood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                app:srcCompat="@drawable/ic_baseline_sentiment_satisfied_alt_24" />

            <TextView
                android:id="@+id/vGoodLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/very_good"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rate5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/excellent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                app:srcCompat="@drawable/ic_baseline_sentiment_very_satisfied_24" />

            <TextView
                android:id="@+id/excellentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/excellent"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
         