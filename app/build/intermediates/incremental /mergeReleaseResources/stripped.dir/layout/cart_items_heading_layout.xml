<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/order_cart_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/design_default_color_on_secondary"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/order_cart_item_quantity"
        app:layout_constraintEnd_toStartOf="@+id/order_cart_item_quantity"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/order_cart_item_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textColor="@color/design_default_color_on_secondary"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/order_cart_item_price"
        app:layout_constraintEnd_toStartOf="@+id/order_cart_item_price"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/order_cart_item" />

    <TextView
        android:id="@+id/order_cart_item_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Price @"
        android:textColor="@color/design_default_color_on_secondary"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/order_cart_item_total"
        app:layout_constraintEnd_toStartOf="@+id/order_cart_item_total"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/order_cart_item_quantity" />

    <TextView
        android:id="@+id/order_cart_item_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textColor="@color/design_default_color_on_secondary"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/order_cart_item_price"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>