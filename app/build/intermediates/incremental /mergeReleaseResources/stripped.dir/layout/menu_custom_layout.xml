<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                        

    
                                                                        
           


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:tag="layout/menu_custom_layout_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/total_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:tag="binding_1"       />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/food_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layoutAnimation="@anim/layout_animation"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            android:tag="binding_2"
            app:spanCount="2"
            tools:itemCount="2"
            tools:listitem="@layout/item" />
    </LinearLayout>
         