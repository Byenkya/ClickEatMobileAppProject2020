<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    
                                             
                                                                                               
           

    <com.google.android.material.card.MaterialCardView
        android:layout_width="150dp"
        android:layout_height="145dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:adjustViewBounds="true"
        app:rippleColor="@color/colorPrimaryDark"
        android:tag="layout/custom_categories_layout_0"      
        android:padding="8dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:strokeColor="@color/design_default_color_background"
        app:strokeWidth="3dp"  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                                 
                app:srcCompat="@drawable/ic_baseline_sports_bar_24"  android:tag="binding_1"/>

            <TextView
                android:id="@+id/cat_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="title"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/icon_image"
                app:layout_constraintTop_toTopOf="parent"
                                    android:tag="binding_2"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
         