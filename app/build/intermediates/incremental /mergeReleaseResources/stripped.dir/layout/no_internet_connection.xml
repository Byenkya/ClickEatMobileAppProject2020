<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" android:tag="layout/no_internet_connection_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_baseline_cloud_off_24" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please check your internet connection and try again." />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reloadButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="try again"
            android:textColor="@color/colorPrimaryDark"
            app:iconTint="@color/colorPrimaryDark"
            app:rippleColor="@color/colorPrimaryDark" />
    </LinearLayout>
         